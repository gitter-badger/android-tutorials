<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_custom_msg"
        android:id="@+id/buttonBroadcast"
        android:clickable="true"
        android:longClickable="false"
        android:onClick="sendCustomBroadcast"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCustom"
        android:text="No"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonBroadcast"
        android:layout_toEndOf="@+id/buttonBroadcast"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBT"
        android:layout_marginTop="51dp"
        android:text="No"
        android:layout_below="@+id/textViewCustom"
        android:layout_toEndOf="@+id/buttonBroadcast"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWiFi"
        android:text="No"
        android:layout_alignTop="@+id/textViewLabelWiFi"
        android:layout_toEndOf="@+id/buttonBroadcast"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received custom broadcast?"
        android:id="@+id/textViewLabelCustom"
        android:layout_above="@+id/textViewBT"
        android:layout_alignParentStart="true"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received BT broadcast?"
        android:id="@+id/textViewLabelBT"
        android:autoText="false"
        android:layout_alignTop="@+id/textViewBT"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received WiFi broadcast?"
        android:id="@+id/textViewLabelWiFi"
        android:autoText="false"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textViewLabelBT"
        android:layout_alignParentStart="true" />

</RelativeLayout>
